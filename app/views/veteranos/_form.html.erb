<%= form_for(@veterano) do |f| %>
  <% if @veterano.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@veterano.errors.count, "error") %> O que deu caca:</h2>

      <ul>
      <% @veterano.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br />
    <%= f.text_field :telefone %>
  </div>
  <div class="actions">
    <%= f.submit "Confirmar" %>
  </div>
<% end %>