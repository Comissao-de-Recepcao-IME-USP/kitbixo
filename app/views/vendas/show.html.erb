
<h1>Venda para <%= @venda.bixo.nome %></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Cor da mochila:</b>
  <%= @venda.cor_da_mochila %>
</p>

<p>
  <b>Tamanho da camisa:</b>
  <%= @venda.tamanho_camisa %>
</p>

<p>
  <b>Valor:</b>
  R$ <%= @venda.valor %>
</p>

<p>
  <b>Completo:</b>
    <% if @venda.completo? == true then%>Completo
  	<% else %> Parcial
   	<% end %>
</p>

<p>
  <b>Bixo:</b>
  <%= @venda.bixo.nome%>
</p>

<h2>Pagamentos</h2>

<% @pagamentos.each do |pagamento| %>
  <hr>
  <p>
    R$ <%= pagamento.valor %> (recebido por <b><%= pagamento.responsavel %></b>)
    <%= link_to 'Modificar', edit_pagamento_path(pagamento) %>
    <%= link_to 'Remover', pagamento_path(pagamento), method: :delete,
          data: { :confirm => 'Tem certeza?' } %>
  </p>
<% end %>
<hr>

<br>
<%= link_to 'Novo pagamento', new_pagamento_path(:venda => @venda.id) %>
