<h1>Listagem de Esportes</h1>
<%= link_to 'Novo esporte', new_esporte_path %><br>
<table>
  <tr>
    <th>modalidade</th>
    <th></th>
    <th></th>
  </tr>
<% @esportes.each do |esporte| %>
  <tr bgcolor=AAFFAA width="100%">
    <td><%= esporte.modalidade %></td>
    <td><%= link_to 'Ver', esporte %></td>
    <td>
      <%= link_to 'Remover', esporte, :method => :delete,
            :data => { :confirm => 'Tem certeza?' } %>
    </td>


  </tr>
<% end %>
</table>
